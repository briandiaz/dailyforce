<h1>Accounts</h1>
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Accounts</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive">
                <table id="datatable_filter" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Account Name</th>
                            <th>Billing City</th>
                            <th>Phone</th>
                            <th>Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @accounts.each do |account| %>
                        <tr>
                            <td><%= link_to account_path(account.Id) do %><%= account.Name %><% end %></td>
                            <td><%= account.BillingCity %></td>
                            <td><%= account.Phone %></td>
                            <td><%= account.Type %></td>
                            <td>
                                <%= link_to edit_account_path(account.Id)  do %>
                                    <i class="glyphicon glyphicon-edit" ></i>
                                <% end %>
                                <%= link_to account_path(account.Id),
                                    :method => :delete ,
                                    :data => { :confirm => "Are you sure?" } do %>
                                    <i class="glyphicon glyphicon-remove" ></i>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>