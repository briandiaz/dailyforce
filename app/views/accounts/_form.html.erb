<%= form_tag(accept_charset:"UTF-8", action:"/accounts", object_id: params[:id], controller: controller, role:"form") %>
<div class="row">
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Account Information</h3>
            </div><!-- /.box-header -->
