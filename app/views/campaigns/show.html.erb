<p class="lead">Campaign</p>
<h1><%= @campaign.Name %></h1>
    <!-- left column -->
<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Campaign Information</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">
                <div class="form-group">
                    <label class="col-md-4">Name</label>
                    <div class="col-md-8">
                        <p><%= @campaign.Name %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Active</label>
                    <div class="col-md-8">
                        <p><%= @campaign.IsActive %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Type</label>
                    <div class="col-md-8">
                        <p><%= @campaign.Type %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Status</label>
                    <div class="col-md-8">
                        
                        <p><%= @campaign.Status %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Start Date</label>
                    <div class="col-md-8">
                        <p><%= Date.parse(@campaign.StartDate).strftime('%A %d %B %Y') %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">End Date</label>
                    <div class="col-md-8">
                        <p><%= Date.parse(@campaign.EndDate).strftime('%A %d %B %Y') %></p>
                    </div>
                </div>
                <br/>
                
                <div class="form-group">
                    <label class="col-md-4">Parent Campaign</label>
                    <div class="col-md-8">
                        
                        <p><%= link_to campaign_path(@parentcampaign.Id) do %><%= @parentcampaign.Name %><% end if @parentcampaign.Id %></p>
                    </div>
                </div>
                <br/>
            </div><!-- /.box-body -->
            
            <div class="box-footer">
            </div>
            
        </div><!-- /.box -->
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Campaign Costs</h3>
            </div>
        
            <div class="box-body">
                <div class="form-group">
                    <label class="col-md-4">Expected Revenue</label>
                    <div class="col-md-8">
                        <p><%= number_to_currency(@campaign.ExpectedRevenue,:unit => "USD$ ") %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Expected Response (%)</label>
                    <div class="col-md-8">
                        <p><%= number_to_percentage(@campaign.ExpectedResponse,precision: 2) %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Budgeted Cost</label>
                    <div class="col-md-8">
                        <p><%= number_to_currency(@campaign.BudgetedCost,:unit => "USD$ ")  %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Actual Cost</label>
                    <div class="col-md-8">
                        <p><%= number_to_currency(@campaign.ActualCost,:unit => "USD$ ")  %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Num Sent</label>
                    <div class="col-md-8">
                        <p><%= number_to_currency(@campaign.NumberSent,:unit=>"") %></p>
                    </div>
                </div>
                <br/>
            </div>
            <div class="box-footer">
            </div>
        </div>

    </div><!--/.col (left) -->
    <div class="col-md-6">
        
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Campaign Results</h3>
            </div>
        
            <div class="box-body">
                <div class="form-group">
                    <label class="col-md-4">Leads</label>
                    <div class="col-md-8">
                        <p><%= @campaign.NumberOfLeads %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">ConvertedLeads</label>
                    <div class="col-md-8">
                        <p><%= @campaign.NumberOfConvertedLeads %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Contacts</label></label>
                    <div class="col-md-8">
                        <p><%= @campaign.NumberOfContacts %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Responses</label>
                    <div class="col-md-8">
                        <p><%= @campaign.NumberOfResponses %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Opportunities</label>
                    <div class="col-md-8">
                        <p><%= @campaign.NumberOfOpportunities %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Won Opportunities</label>
                    <div class="col-md-8">
                        <p><%= @campaign.NumberOfWonOpportunities %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Total Value Opportunities</label>
                    <div class="col-md-8">
                        <p><%= number_to_currency(@campaign.TotalAmountAllOpportunities,:unit=>"USD$ ") %></p>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label class="col-md-4">Total Value Won Opportunities</label>
                    <div class="col-md-8">
                        <p><%= number_to_currency(@campaign.TotalAmountAllWonOpportunities,:unit=>"USD$ ") %></p>
                    </div>
                </div>
                <br/>
            </div>
            <div class="box-footer">
            </div>
        </div>
        
        <div class="box box-warming">
            <div class="box-header">
                <h3 class="box-title">Campaign Description</h3>
            </div><!-- /.box-header -->
            
            <div class="box-body">
                <div class="form-group" style="height:60px">
                    <label class="col-md-4">Description</label>
                    <div class="col-md-8">
                        
                        <p><%= @campaign.Description %></p>
                    </div>
                </div>
                <br/>
            </div>
            <div class="box-footer">
            
            </div>
        </div>
    </div>
</div>