                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="type" class="col-md-4">Account Number</label>
                        <div class="col-md-8">
                            <%= form_input(type:"number", html_class:"form-control", id:"number", placeholder: "Enter Account Number", value: @account, property: "AccountNumber") %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="status" class="col-md-4">Site</label>
                        <div class="col-md-8">
                            <%= form_input(type:"text", html_class:"form-control", id:"site", placeholder: "Enter Site", value: @account, property: "Site") %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="startdate" class="col-md-4">Type</label>
                        <div class="col-md-8">
                            <%= the_force_select(model: 'Account', property: 'Type', class_name: 'form-control', id: 'type', name: 'type', value: @account) %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="priority" class="col-md-4">Industry</label>
                        <div class="col-md-8">
                            <%= the_force_select(model: 'Account', property: 'Industry', class_name: 'form-control', id: 'industry', name: 'industry', value: @account) %> 
                        </div>
                    </div>
                    <br/>
                    
                    <div class="form-group">
                        <label for="origin" class="col-md-4">Annual Revenue</label>
                        <div class="col-md-8">
                            <%= form_input(type:"number", html_class:"form-control", id:"annualrevenue", additional: 'step="0.01" min="0.00"', placeholder: "Enter Annual Revenue", value: @account, property: "AnnualRevenue") %>
                        </div>
                    </div>
                    <br/>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="contact" class="col-md-4">Rating</label>
                        <div class="col-md-8">
                            <%= the_force_select(model: 'Account', property: 'Rating', class_name: 'form-control', id: 'rating', name: 'rating', value: @account) %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="account" class="col-md-4">Phone</label>
                        <div class="col-md-8">
                            <%= form_input(type:"text", html_class:"form-control", id:"phone", additional: 'data-inputmask=\'"mask": "(999) 999-9999"\'', value: @account, property: "Phone") %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="type" class="col-md-4">Fax</label>
                        <div class="col-md-8">
                            <%= form_input(type:"text", html_class:"form-control", id:"fax", additional: ' data-inputmask=\'"mask": "(999) 999-9999"\' data-mask', value: @account, property: "Fax") %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="status" class="col-md-4">Website</label>
                        <div class="col-md-8">
                            <%= form_input(type:"text", html_class:"form-control", id:"website", placeholder: "Enter Website", value: @account, property: "Site") %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="startdate" class="col-md-4">Ticker Symbol</label>
                        <div class="col-md-8">   
                            <%= form_input(type:"text", html_class:"form-control", id:"ticker", placeholder: "Enter Ticker Symbol", value: @account, property: "TickerSymbol") %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="priority" class="col-md-4">Ownership</label>
                        <div class="col-md-8">
                            <%= the_force_select(model: 'Account', property: 'Ownership', class_name: 'form-control', id: 'ownership', name: 'ownership', value: @account) %> 
                        </div>
                    </div>
                    <br/>
                    
                    <div class="form-group">
                        <label for="origin" class="col-md-4">Employees</label>
                        <div class="col-md-8">
                            <%= form_input(type:"number", html_class:"form-control", id:"employees", additional: 'step="1"', placeholder: "Enter Number Of Employees", value: @account, property: "NumberOfEmployees") %>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="origin" class="col-md-4">SIC Code</label>
                        <div class="col-md-8">
                            <%= form_input(type:"text", html_class:"form-control", id:"sic", placeholder: "Enter Sic Code", value: @account, property: "Sic") %>
                        </div>
                    </div>
                    <br/>
                </div>
                <br/>
                <br/>
                <br/>
                <br/>
            </div><!-- /.box-body -->
            
            
        </div><!-- /.box -->

    </div>
</div>
