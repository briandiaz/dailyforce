
    <!-- left column -->
<%= form_tag(accept_charset:"UTF-8", action:"/campaigns", object_id: params[:id], controller: controller, role:"form") %>

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Campaign Information</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">
                <div class="form-group">
                    <label for="name" class="col-md-4">Name</label>
                    <div class="col-md-8">
                        <%= form_input(type:"text", html_class:"form-control", id:"name", placeholder: "Enter Name", value: @campaign, property: "Name", required: true) %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="active" class="col-md-4">Active</label>
                    <div class="col-md-8">
                        <input type="checkbox" class="simple" id="active" name="active"/>
                        <%= form_input(type:"checkbox", html_class:"form-control", id:"active", value: @campaign, property: "Active") %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="type" class="col-md-4">Type</label>
                    <div class="col-md-8">
                        <%= the_force_select(model: 'Campaign', property: 'Type', class_name: 'form-control', id: 'type', name: 'type', value: @campaign) %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="status" class="col-md-4">Status</label>
                    <div class="col-md-8">
                        <%= the_force_select(model: 'Campaign', property: 'Status', class_name: 'form-control', id: 'status', name: 'status', value: @campaign) %>                    
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="startdate" class="col-md-4">Start Date</label>
                    <div class="col-md-8">
                        <%= form_input(type:"text", html_class:"form-control", id:"startdate", placeholder: "Select Start Date", additional: 'data-date-format="yyyy-mm-dd"', value: @campaign, property: "StartDate", required: true) %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="enddate" class="col-md-4">End Date</label>
                    <div class="col-md-8">
                        <%= form_input(type:"text", html_class:"form-control", id:"enddate", placeholder: "Select End Date", additional: 'data-date-format="yyyy-mm-dd"', value: @campaign, property: "EndDate", required: true) %>
                    </div>
                </div>
                <br/>
                
                <div class="form-group">
                    <label for="parentcampaign" class="col-md-4">Parent Campaign</label>
                    <div class="col-md-8">
                        <%= force_select_data(data: @campaigns, model: 'Campaign', property: 'ParentId', class_name: 'form-control', id: 'parentcampaign', name: 'parentcampaign', value: @campaign) %>
                    </div>
                </div>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
            </div><!-- /.box-body -->
            
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            
        </div><!-- /.box -->

    </div><!--/.col (left) -->
    <div class="col-md-6">
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Campaign Costs</h3>
            </div>
        
            <div class="box-body">
                <div class="form-group">
                    <label for="expectedrevenue" class="col-md-4">Expected Revenue</label>
                    <div class="col-md-8">
                        <%= form_input(type:"number", html_class:"form-control", id:"expectedrevenue", additional: 'step="0.01"', placeholder: "Enter Expected Revenue", value: @campaign, property: "ExpectedRevenue") %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="budgetedcost" class="col-md-4">Budgeted Cost</label>
                    <div class="col-md-8">
                        <%= form_input(type:"number", html_class:"form-control", id:"budgetedcost", additional: 'step="0.01"', placeholder: "Enter Budgeted Cost", value: @campaign, property: "BudgetedCost") %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="actualcost" class="col-md-4">Actual Cost</label>
                    <div class="col-md-8">
                        <%= form_input(type:"number", html_class:"form-control", id:"actualcost", additional: 'step="0.01"', placeholder: "Enter Actual Cost", value: @campaign, property: "ActualCost") %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="expectedresponse" class="col-md-4">Expected Response (%)</label>
                    <div class="col-md-8">
                        <%= form_input(type:"number", html_class:"form-control", id:"expectedresponse", additional: 'step="1"', placeholder: "Enter Expected Response (%)", value: @campaign, property: "ExpectedResponse") %>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="numsent" class="col-md-4">Num Sent</label>
                    <div class="col-md-8">
                        <%= form_input(type:"number", html_class:"form-control", id:"numsent", additional: 'step="1"', placeholder: "Enter Number Sent", value: @campaign, property: "NumberSent") %>
                    </div>
                </div>
                <br/>
            </div>
            <div class="box-footer">
            </div>
        </div>
        
        <div class="box box-warming">
            <div class="box-header">
                <h3 class="box-title">Campaign Description</h3>
            </div><!-- /.box-header -->
            
            <div class="box-body">
                <div class="form-group" style="height:60px">
                    <label class="col-md-4">Description</label>
                    <div class="col-md-8">
                        <%= form_input_textarea(html_class:"form-control", id:"description", placeholder: "Enter Description", value: @campaign, property: "Description") %>
                    </div>
                </div>
                <br/>
            </div>
            <div class="box-footer">
            </div>
        </div>
    </div>
</div>
</form>
