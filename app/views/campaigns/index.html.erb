<h1>Campaigns</h1>
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Campaigns</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive">
                <table id="datatable_filter" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Is Active</th>
                            <th>Status</th>
                            <th>Type</th>
                            <th>Expected Revenue</th>
                            <th>Expected Response</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @campaigns.each do |campaign| %>
                        <tr>
                            <td><%= link_to campaign_path(campaign.Id) do %><%= campaign.Name %><% end %></td>
                            <td><%= campaign.IsActive %></td>
                            <td><%= campaign.Status %></td>
                            <td><%= campaign.Type %></td>
                            <td><%= number_to_currency(campaign.ExpectedRevenue, :unit => "USD$ ") %></td>
                            <td><%= number_to_percentage(campaign.ExpectedResponse,precision: 2) %></td>
                            <td>
                                <%= link_to edit_campaign_path(campaign.Id)  do %>
                                    <i class="glyphicon glyphicon-edit" ></i>
                                <% end %>
                                <%= link_to campaign_path(campaign.Id),
                                    :method => :delete ,
                                    :data => { :confirm => "Are you sure?" } do %>
                                    <i class="glyphicon glyphicon-remove" ></i>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>